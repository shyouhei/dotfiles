Host *
     User shyouhei
     UseRoaming no
     ControlMaster auto
     ControlPath ~/.ssh/[ControlMaster]%r@%h:%p
     ControlPersist 300
     Protocol 2
     ServerAliveInterval 128
     HashKnownHosts yes
     ForwardAgent yes

Host ci.ruby-lang.org
     User svn
     IdentityFile ~/.ssh/id_ed25519

Host github.com
     User git
     IdentityFile ~/.ssh/id_ed25519
